<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <payment>
            <universalpay_payment>
                <active>0</active>
                <model>UniversalPay\Payment\Model\PaymentMethod</model>
                <title>UniversalPay</title>
                <payment_action>sale</payment_action>
                <order_status>pending</order_status>
                <payment_cancelled>canceled</payment_cancelled>
                <merchant_id></merchant_id>
                <merchant_password></merchant_password>
                <merchant_brandid></merchant_brandid>
                <payment_methods>500</payment_methods>
                <display_mode>hostedPayPage</display_mode>
                <debug_log>0</debug_log>
                <environment>production</environment>
                <token_url_production>https://api.universalpay.es/token</token_url_production>
                <cashier_url_production>https://cashierui.universalpay.es/ui/cashier</cashier_url_production>
                <payments_url_production>https://api.universalpay.es/payments</payments_url_production>
                <js_url_production>https://cashierui.universalpay.es/js/api.js</js_url_production>
                <token_url_sandbox>https://api.test.universalpay.es/token</token_url_sandbox>
                <cashier_url_sandbox>https://cashierui.test.universalpay.es/ui/cashier</cashier_url_sandbox>
                <payments_url_sandbox>https://api.test.universalpay.es/payments</payments_url_sandbox>
                <js_url_sandbox>https://cashierui.test.universalpay.es/js/api.js</js_url_sandbox>
                <is_gateway>1</is_gateway>
                <allowspecific>0</allowspecific>
                <specific_countries></specific_countries>
                <specific_currencies></specific_currencies>
            </universalpay_payment>
        </payment>
    </default>
</config>
